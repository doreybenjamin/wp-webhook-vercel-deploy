{
    "name": "doreybenjamin/wp-webhook-vercel-deploy",
    "description": "WP Plugin that adds functionality to easily send Vercel Webhook requests",
    "homepage": "https://github.com/doreybenjamin/wp-webhook-vercel-deploy",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Dorey Benjamin",
            "email": "benjamin@biomx.dev",
            "homepage": "https://github.com/doreybenjamin"
        }
    ],
    "support": {
        "issues": "https://github.com/doreybenjamin/wp-webhook-vercel-deploy/issues"
    },
    "require": {
        "php": "^8.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": [
            "phpcs --ignore=index.php,vendor,resources,storage,dist --extensions=php --standard=PSR12 ."
        ]
    }
}